{
  "name": "le-kit",
  "version": "0.3.0",
  "description": "Themable web components library with CMS admin mode support",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/le-kit/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/le-kit/index.esm.js",
      "require": "./dist/cjs/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js",
      "types": "./loader/index.d.ts"
    },
    "./dist/themes/*.css": "./dist/themes/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leechy/le-kit.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "npm run build:admin",
    "build:admin": "stencil build && cem analyze --stencil",
    "build:core": "node scripts/prepare-core.mjs && stencil build --config stencil.core.config.ts",
    "start": "cem analyze --stencil && stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "analyze": "cem analyze --stencil"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@stencil/core": "^4.27.1",
    "@stencil/react-output-target": "^1.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0"
  },
  "license": "MIT",
  "customElements": "src/assets/custom-elements.json"
}
